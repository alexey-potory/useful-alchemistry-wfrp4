<header class="item-header">
    <h1>
        <input name="name" class="item-header item-name" type="text" value="{{item.name}}" placeholder="{{localize 'Name'}}"/>
    </h1>
</header>

<img class="item-image" src="{{item.img}}" data-edit="img"  />

<div class="item-details row1">
    <label class="label-text" style="flex-grow: 0; width: 69px;">{{localize "Type"}}</label>
    <div class="input-box category" style="margin-right: 3px; flex-grow: 2; padding-top: 0px; text-align: center; min-width: 96px;">
        {{localize category}}
    </div>
</div>
<div class="item-details row2">
    <label class="label-text" style="flex-grow: 0; width: 69px;">{{localize "ALCHEMY_RECIPE.ModifierLabel"}}</label>
    <div class="input-box category" style="margin-right: 3px; flex-grow: 2; padding-top: 0px; text-align: center; min-width: 96px;">
        <input name="system.difficultyModifier" value="{{item.system.difficultyModifier}}" class="input-details" style="width: 100%;text-align: center;margin-top: -5px;background: none;box-shadow: none !important;border: none;" placeholder="{{localize "ALCHEMY_RECIPE.ModifierPlaceholder"}}"/>
    </div>
</div>